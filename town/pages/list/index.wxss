/* pages/list/index.wxss */
.list{
  
}

.list-cont{
  display: flex;
  height: 100px;
  padding: .5rem;
}
.list-cont .list-left{
  width: 100px;
  margin-right: .5rem;
}

.list-left image{
  width: 100px;
  height: 100px;
}
.list-right{
  display: flex;
  flex-direction: column;
}
.list-right>text:nth-of-type(1){
  color: grey;
  font-size: 14px;
}
.list-right>text:nth-of-type(2){
  margin:10px 0;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  text-overflow:ellipsis;
  color:#333;
}

.list-right-cont{
  display: flex;
  justify-content: space-around;
}

.list-right-cont text:nth-of-type(1){
  color: red;
  font-weight: bold;
}

.list-right-cont text:nth-of-type(2){
  height:16px;
  line-height:16px;
  padding:1px 6px 1px 10px;
  background:url(http://www.huanqiuxiaozhen.com/assets/images/discount-bg.png) no-repeat center;
  background-size:cover;
  color:#fff;
  font-size:12px;
}

.list-right-cont text:nth-of-type(3){
  text-decoration: line-through;
  color: grey;
}
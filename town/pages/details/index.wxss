/* pages/details/index.wxss */
.list{

}
.list-contonent{
  display: flex;
  width: 100%;
  height: 120px;
  padding: .5rem 0;
  border-bottom: 1px solid grey;
}

.list-contonent view:nth-of-type(1){
  width: 50%;
}
.list-contonent view:nth-of-type(1) image{
  width: 160px;
  height: 120px
}

.list-contonent view:nth-of-type(2){
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  padding: .4rem 0;
}

.list-contonent view:nth-of-type(2) text{
  margin: .1rem 0;
}

.list-contonent view:nth-of-type(2) text:nth-last-of-type(2){
  color: grey;
}

.list-contonent view:nth-of-type(2) text:nth-last-of-type(1){
  color: red;
}

.list-contonent view:nth-of-type(2) image{
  width: 90px;
  height: 46px;
}